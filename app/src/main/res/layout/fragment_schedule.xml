<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#fff">

        <me.jlurena.revolvingweekview.WeekView
            android:id="@+id/weekView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:eventTextColor="@android:color/white"
            app:textSize="12sp"
            app:hourHeight="60dp"
            app:headerColumnPadding="8dp"
            app:headerColumnTextColor="@color/toolbar_text"
            app:headerRowPadding="12dp"
            app:columnGap="8dp"
            app:noOfVisibleDays="3"
            app:autoLimitTime="false"
            app:headerRowBackgroundColor="@color/toolbar"
            app:dayBackgroundColor="#05000000"
            app:todayBackgroundColor="#1848adff"
            app:headerColumnBackground="#ffffffff"
            app:todayHeaderTextColor="@color/accent"
            app:newEventTimeResolutionInMinutes="15"
            app:timeColumnResolution="60"
            app:dropListenerEnabled="true"
            app:minOverlappingMinutes="5" />

        <TextView
            android:id="@+id/draggable_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffff0000"
            android:padding="3dp"
            android:text="drag me"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</FrameLayout>